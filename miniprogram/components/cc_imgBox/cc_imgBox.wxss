.img-box {
  width: 100%;
  height: 100%;
  position: relative;
  background-color: lightskyblue;
}
.img-box.load {
  background-color: transparent;
}
.img-box image { 
   opacity: 0;
   width: 100%;
   transition:all linear 0.4s;
}
.img-box .fill {
   height: 100%; 
}
.img-box image.show {
  opacity: 1;
}